<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.loicdelorme.followUpYourGarden.controllers.GroupOfPlantsFormController">
   <children>
      <HBox>
         <children>
            <VBox prefHeight="540.0" prefWidth="410.0">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label fx:id="title" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label fx:id="wordingLabel" textAlignment="CENTER" />
                        <TextField fx:id="wording" prefHeight="25.0" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label fx:id="plantingDateLabel" />
                        <DatePicker fx:id="plantingDate" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label fx:id="imageLabel" />
                        <Button fx:id="image" mnemonicParsing="false" onAction="#onImageAction" />
                        <Label fx:id="imagePath" prefWidth="175.0" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label fx:id="iconColorLabel" />
                        <ColorPicker fx:id="iconColor" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label fx:id="typesOfPlantsLabel" />
                        <ListView fx:id="typesOfPlants" prefHeight="250.0" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <HBox>
               <children>
                  <GridPane fx:id="positions" alignment="CENTER" gridLinesVisible="true" hgap="2.0" vgap="2.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </GridPane>
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="valid" mnemonicParsing="false" onAction="#onValidAction" />
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#onCancelAction" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </padding>
      </HBox>
   </children>
</VBox>
