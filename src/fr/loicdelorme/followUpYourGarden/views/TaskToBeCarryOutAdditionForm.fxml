<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="352.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.loicdelorme.followUpYourGarden.controllers.TaskToBeCarryOutAdditionFormController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="title" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font></Label>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="typeOfTasksLabel" textAlignment="CENTER" />
            <ChoiceBox fx:id="typeOfTasks" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="deadlineDateLabel" />
            <DatePicker fx:id="deadlineDate" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="anticipatedDurationLabel" />
            <TextField fx:id="anticipatedDuration" prefWidth="45.0" />
            <Label fx:id="anticipatedDurationLabelBis" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="priorityLabel" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="priority" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="isRecurrentLabel" />
            <CheckBox fx:id="isRecurrent" mnemonicParsing="false" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="periodicityLabel" />
            <TextField fx:id="periodicity" prefWidth="45.0" />
            <Label fx:id="periodicityLabelBis" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="valid" mnemonicParsing="false" onAction="#onValidAction" />
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#onCancelAction" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </padding>
      </HBox>
   </children>
</VBox>
